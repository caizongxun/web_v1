# CPB Crypto Predictor Web V6 - Environment Configuration

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# Server Configuration
HOST=localhost
PORT=8001
WORKERS=4

# CORS Configuration
CORS_ORIGINS=*

# Database (Optional)
DATABASE_URL=sqlite:///cpb_predictions.db

# API Configuration
API_RATE_LIMIT=100
API_TIMEOUT=30

# Model Configuration
MODEL_VERSION=V6
LSTM_WEIGHT=0.5
GRU_WEIGHT=0.3
XGBOOST_WEIGHT=0.2

# Feature Flags
USE_CACHED_PREDICTIONS=True
ENABLE_HISTORICAL_DATA=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
